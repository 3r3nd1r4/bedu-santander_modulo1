// Reto #1:
// Usando la base de datos sample_airbnblistingsAndReviews, realiza los siguientes filtros:
// d) Propiedades que no permitan fiestas ni fumadores.
{
 filter: {
  $and: [
   {
    house_rules: RegExp('no parties', i)
   },
   {
    house_rules: RegExp('no smoking', i)
   }
  ]
 }
}